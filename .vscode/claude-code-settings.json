{
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.stubPath": "./typings",
    "python.analysis.extraPaths": [
        "./src",
        "./notebooks",
        "./.venv/lib/python3.11/site-packages"
    ],
    "python.analysis.include": [
        "src/**/*.py",
        "notebooks/**/*.py",
        "tests/**/*.py",
        "data/**/*.py"
    ],
    "python.analysis.exclude": [
        "**/.venv/**",
        "**/__pycache__/**",
        "**/data/raw/**",
        "**/data/processed/**",
        "**/models/**",
        "**/logs/**"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "88"],
    "python.sortImports.args": ["--profile", "black"],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintArgs": [
        "--disable=C0111,C0103,C0303,W0621,W0611,W0603,R0903,R0913,R0914,R0915"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--extend-ignore=E203,W503"
    ],
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--disallow-untyped-defs",
        "--disallow-incomplete-defs"
    ],
    "jupyter.defaultKernel": "Python 3.11 (petrobras)",
    "jupyter.askForKernelRestart": false,
    "jupyter.enableAutoMatcher": true,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "python.debugging.console": "integratedTerminal",
    "python.debugging.consoleTitle": "üêç Python Debug Console",
    "python.debugging.consoleTitleTemplate": "üêç {name} - {type}",
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/*.pyc": true,
        "**/data/**": true,
        "**/models/**": true,
        "**/logs/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true
    },
    "files.exclude": {
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/data/raw": true,
        "**/data/processed": true,
        "**/models": true,
        "**/logs": true,
        "**/.ruff_cache": true
    },
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "\"JetBrains Mono\", 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.6,
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.trimAutoWhitespace": true,
    "editor.trimTrailingWhitespace": true,
    "editor.insertFinalNewline": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    "search.exclude": {
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/data/raw": true,
        "**/data/processed": true,
        "**/models": true,
        "**/logs": true,
        "**/.ruff_cache": true
    },
    "markdown.preview.breaks": true,
    "markdown.preview.fontSize": 14,
    "markdown.preview.lineHeight": 1.6,
    "markdown.preview.scrollPreviewWithEditor": true,
    "docker.showStartPage": false,
    "docker.commands.build": "docker build -t ${imageName} .",
    "docker.commands.run": "docker run -it --rm ${imageName}",
    "docker.commands.push": "docker push ${imageName}",
    "docker.commands.pull": "docker pull ${imageName}",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.autofetchPeriod": 300,
    "git.autoStash": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["tests"],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestPath": "./.venv/bin/pytest",
    "python.dataScience.enableAutoStartingServer": false,
    "python.dataScience.askForKernelRestart": false,
    "python.dataScience.enableJupyterAutoMatcher": true,
    "extensions.ignoreRecommendations": false,
    "extensions.autoUpdate": true,
    "extensions.autoCheckUpdates": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "explorer.autoReveal": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONUNBUFFERED": "1"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONUNBUFFERED": "1"
    },
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONUNBUFFERED": "1"
    },
    "peacock.favoriteColors": [
        {
            "name": "Python",
            "value": "#25415d"
        },
        {
            "name": "Docker",
            "value": "#1d63ed"
        },
        {
            "name": "Kubernetes",
            "value": "#436ee3"
        },
        {
            "name": "Data Science",
            "value": "#007fff"
        },
        {
            "name": "Machine Learning",
            "value": "#dd0531"
        },
        {
            "name": "Petrobras",
            "value": "#0C4B33"
        },
        {
            "name": "Claude Code",
            "value": "#FF6B35"
        }
    ],
    "sonarlint.rules": {
        "python:S1481": "off",
        "python:S1172": "off",
        "python:S1066": "off"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "remote.containers.defaultExtensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.mypy-type-checker"
    ]
}
