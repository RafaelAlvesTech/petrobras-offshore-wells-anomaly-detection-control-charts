# AWS Environment Variables for Petrobras Offshore Wells Anomaly Detection
# Copie este arquivo para .env.aws e configure com seus valores reais

# =============================================================================
# AWS CREDENTIALS & AUTHENTICATION
# =============================================================================

# Credenciais AWS (não commitar no git!)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_SESSION_TOKEN=your-session-token  # Opcional para sessões temporárias

# Configuração de perfil AWS (alternativa às credenciais diretas)
AWS_PROFILE=default
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1

# =============================================================================
# SAGEMAKER CONFIGURATION
# =============================================================================

# SageMaker Domain e User Profile
SAGEMAKER_DOMAIN_ID=d-xxxxxxxxx
SAGEMAKER_USER_PROFILE_NAME=petrobras-user
SAGEMAKER_DOMAIN_NAME=petrobras-anomaly-detection

# SageMaker Training Jobs
SAGEMAKER_DEFAULT_INSTANCE_TYPE=ml.p3.2xlarge
SAGEMAKER_ROLE_ARN=arn:aws:iam::your-account-id:role/PetrobrasAnomalyDetectionRole

# SageMaker Endpoints
SAGEMAKER_ENDPOINT_NAME=anomaly-detection-prediction
SAGEMAKER_ENDPOINT_CONFIG_NAME=anomaly-detection-config

# =============================================================================
# S3 CONFIGURATION
# =============================================================================

# Bucket principal para dados e modelos
S3_BUCKET_NAME=petrobras-anomaly-detection
S3_REGION=us-east-1

# Caminhos específicos no S3
S3_DATA_PATH=s3://petrobras-anomaly-detection/data
S3_MODELS_PATH=s3://petrobras-anomaly-detection/models
S3_EXPERIMENTS_PATH=s3://petrobras-anomaly-detection/experiments
S3_LOGS_PATH=s3://petrobras-anomaly-detection/logs
S3_CHECKPOINTS_PATH=s3://petrobras-anomaly-detection/checkpoints
S3_DATASETS_PATH=s3://petrobras-anomaly-detection/datasets

# =============================================================================
# EC2 CONFIGURATION
# =============================================================================

# Configurações de instâncias EC2 para treinamento
EC2_INSTANCE_TYPE=p3.2xlarge
EC2_AMI_ID=ami-0c02fb55956c7d316  # Deep Learning AMI GPU PyTorch 2.0.1
EC2_KEY_NAME=petrobras-key-pair
EC2_SECURITY_GROUP_ID=sg-xxxxxxxxx
EC2_SUBNET_ID=subnet-xxxxxxxxx

# Configurações de storage EC2
EC2_ROOT_VOLUME_SIZE_GB=100
EC2_DATA_VOLUME_SIZE_GB=500

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================

# MLflow tracking e artefatos
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=petrobras-anomaly-detection
MLFLOW_ARTIFACT_ROOT=s3://petrobras-anomaly-detection/mlflow-artifacts
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db

# =============================================================================
# TENSORBOARD CONFIGURATION
# =============================================================================

# TensorBoard logs
TENSORBOARD_LOG_DIR=s3://petrobras-anomaly-detection/tensorboard-logs
TENSORBOARD_PORT=6006

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Configurações padrão de treinamento
TRAINING_BATCH_SIZE=32
TRAINING_LEARNING_RATE=0.001
TRAINING_EPOCHS=100
TRAINING_VALIDATION_SPLIT=0.2
TRAINING_EARLY_STOPPING_PATIENCE=10
TRAINING_CHECKPOINT_SAVE_FREQ=5

# Configurações específicas por modelo
LSTM_VAE_BATCH_SIZE=64
LSTM_VAE_LEARNING_RATE=0.0001
LSTM_VAE_EPOCHS=150
LSTM_VAE_HIDDEN_DIM=128
LSTM_VAE_LATENT_DIM=32

TRANAD_BATCH_SIZE=128
TRANAD_LEARNING_RATE=0.0005
TRANAD_EPOCHS=200
TRANAD_ATTENTION_HEADS=8
TRANAD_TRANSFORMER_LAYERS=6

USAD_BATCH_SIZE=256
USAD_LEARNING_RATE=0.001
USAD_EPOCHS=100
USAD_WINDOW_SIZE=100
USAD_FEATURE_DIM=64

ECOD_BATCH_SIZE=512
ECOD_LEARNING_RATE=0.01
ECOD_EPOCHS=50
ECOD_CONTAMINATION=0.1
ECOD_N_ESTIMATORS=100

# =============================================================================
# HYPERPARAMETER TUNING
# =============================================================================

# Configurações de tuning
HPT_MAX_JOBS=20
HPT_MAX_PARALLEL_JOBS=5
HPT_STRATEGY=Bayesian

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# CloudWatch configurações
CLOUDWATCH_LOG_GROUP=/aws/sagemaker/petrobras-anomaly-detection
CLOUDWATCH_RETENTION_DAYS=30

# Nível de logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# SECURITY & NETWORKING
# =============================================================================

# VPC e networking
VPC_ID=vpc-xxxxxxxxx
SUBNET_IDS=subnet-xxxxxxxxx,subnet-xxxxxxxxx
SECURITY_GROUP_IDS=sg-xxxxxxxxx

# Configurações de criptografia
S3_ENCRYPTION=true
EBS_ENCRYPTION=true
IN_TRANSIT_ENCRYPTION=true

# =============================================================================
# COST OPTIMIZATION
# =============================================================================

# Configurações de custo
SPOT_INSTANCES_ENABLED=true
SPOT_MAX_WAIT_TIME=3600
MONTHLY_BUDGET=1000
DAILY_BUDGET=50

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Modo de desenvolvimento
DEBUG=false
DRY_RUN=false

# Configurações de teste
TEST_MODE=false
TEST_INSTANCE_TYPE=ml.t3.medium
TEST_BATCH_SIZE=16

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Configurações de notificação
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_NOTIFICATIONS=false
SMS_NOTIFICATIONS=false

# Alertas de custo
COST_ALERTS_ENABLED=true
COST_ALERT_THRESHOLD=0.8  # 80% do orçamento
