    echo ""
    echo "üìÅ Meus diret√≥rios:"
    echo "  üìä Dados: $PERSONAL_DATA_DIR"
    echo "  ü§ñ Modelos: $PERSONAL_MODELS_DIR"
    echo "  üß™ Experimentos: $PERSONAL_EXPERIMENTS_DIR"
    echo "  üíæ Backups: $BACKUP_DIR"
    echo ""
    echo "‚öôÔ∏è Minhas configura√ß√µes:"
    echo "  ü§ñ Modelo: $PERSONAL_MODEL_TYPE"
    echo "  üì¶ Batch Size: $PERSONAL_BATCH_SIZE"
    echo "  üìà Learning Rate: $PERSONAL_LEARNING_RATE"
    echo "  üîÑ Epochs: $PERSONAL_EPOCHS"
    echo ""
    echo "üéØ Meus comandos:"
    echo "  ‚Ä¢ my_experiment - Executar meu experimento"
    echo "  ‚Ä¢ my_backup - Fazer meu backup"
    echo "  ‚Ä¢ my_cleanup - Minha limpeza"
