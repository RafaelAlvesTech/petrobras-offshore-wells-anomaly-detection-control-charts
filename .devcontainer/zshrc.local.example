# =============================================================================
# üöÄ FUN√á√ïES PESSOAIS
# =============================================================================

# Fun√ß√£o para seus experimentos pessoais
my_experiment() {
    local experiment_name="${PERSONAL_EXPERIMENT_PREFIX}_$(date +%Y%m%d_%H%M%S)"
    echo "üß™ Executando meu experimento: $experiment_name"

    # Criar diret√≥rio do experimento
    local exp_dir="${PERSONAL_EXPERIMENTS_DIR}/${experiment_name}"
    mkdir -p "$exp_dir"

    # Executar treinamento com minhas configura√ß√µes
    python src/train.py \
        --experiment_name "$experiment_name" \
        --output_dir "$exp_dir" \
        --model_name "$PERSONAL_MODEL_TYPE" \
        --batch_size "$PERSONAL_BATCH_SIZE" \
        --learning_rate "$PERSONAL_LEARNING_RATE" \
        --epochs "$PERSONAL_EPOCHS" \
        --validation_split "$PERSONAL_VALIDATION_SPLIT"

    echo "‚úÖ Meu experimento $experiment_name conclu√≠do!"
}

# Fun√ß√£o para backup pessoal
my_backup() {
    local backup_name="meu_backup_$(date +%Y%m%d_%H%M%S)"
    echo "üíæ Criando meu backup: $backup_name"

    # Criar diret√≥rio de backup
    mkdir -p "$BACKUP_DIR"

    # Fazer backup dos meus dados
    tar -czf "${BACKUP_DIR}/${backup_name}.tar.gz" \
        "$PERSONAL_DATA_DIR" \
        "$PERSONAL_MODELS_DIR" \
        "$PERSONAL_EXPERIMENTS_DIR"

    echo "‚úÖ Meu backup criado: ${BACKUP_DIR}/${backup_name}.tar.gz"
}

# Fun√ß√£o para limpeza pessoal
my_cleanup() {
    echo "üßπ Fazendo minha limpeza pessoal..."

    # Limpar experimentos antigos
    find "$PERSONAL_EXPERIMENTS_DIR" -type d -mtime +$BACKUP_RETENTION_DAYS -exec rm -rf {} + 2>/dev/null

    # Limpar backups antigos
    find "$BACKUP_DIR" -type f -mtime +$BACKUP_RETENTION_DAYS -delete 2>/dev/null

    # Limpar logs antigos
    find "$HOME/logs" -type f -mtime +7 -delete 2>/dev/null

    echo "‚úÖ Minha limpeza conclu√≠da!"
}

