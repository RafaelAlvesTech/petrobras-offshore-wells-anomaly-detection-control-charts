{
  "name": "Petrobras Offshore Wells Anomaly Detection",
  "dockerComposeFile": "../.docker/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/home/python/app",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh",
            "args": ["-l"]
          }
        },
        "python.defaultInterpreterPath": "/home/python/.local/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.pytest_cache": true,
          "**/node_modules": true,
          "**/.git": false
        },
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "jupyter.askForKernelRestart": false,
        "jupyter.interactiveWindow.creationMode": "perFile"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "charliermarsh.ruff",
        "ms-vscode.vscode-json",
        "yzhang.markdown-all-in-one",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "pkief.material-icon-theme",
        "littlefoxteam.vscode-python-test-adapter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },

  "forwardPorts": [8000, 8888, 5000],
  "portsAttributes": {
    "8000": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "openBrowser"
    },
    "5000": {
      "label": "MLflow Server",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "echo 'üõ¢Ô∏è Petrobras Environment Ready!' && echo 'Available services:' && echo '  - API: http://localhost:8000' && echo '  - Jupyter: http://localhost:8888' && echo '  - MLflow: http://localhost:5000'",

  "postStartCommand": "echo 'üöÄ Container started successfully!'",

  "remoteUser": "python",

  "containerEnv": {
    "TERM": "xterm-256color",
    "SHELL": "/bin/zsh",
    "PYTHONPATH": "/home/python/app/src"
  },

  "mounts": [
    "source=${localWorkspaceFolder}/.docker/zsh/powerlevel10k/.p10k.zsh,target=/home/python/.p10k.zsh,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.docker/zsh/history,target=/home/python/zsh,type=bind,consistency=cached"
  ]
}
