{
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/petrobras-offshore-wells-anomaly-detection-control-charts,type=bind"
  ],
  "name": "Petrobras Offshore Wells Anomaly Detection",
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "workspaceFolder": "/workspaces/petrobras-offshore-wells-anomaly-detection-control-charts"
}
