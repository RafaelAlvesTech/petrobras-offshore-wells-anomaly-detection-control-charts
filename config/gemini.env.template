# Gemini CLI Configuration Template
# Copy this file to .env in your project root and fill in your actual values

# Option 1: Gemini API Key (Recommended for personal use)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your_gemini_api_key_here"

# Option 2: Google Cloud API Key (For Vertex AI)
# Get your key from: https://cloud.google.com/vertex-ai/generative-ai/docs/start/api-keys
# GOOGLE_API_KEY="your_google_api_key_here"
# GOOGLE_GENAI_USE_VERTEXAI=true

# Option 3: Google Cloud Project (For ADC authentication)
# GOOGLE_CLOUD_PROJECT="your_project_id"
# GOOGLE_CLOUD_LOCATION="us-central1"

# Additional Configuration
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# CLI Options
# GEMINI_MODEL="gemini-2.0-flash-exp"  # Default model
# GEMINI_DEBUG=false                    # Enable debug mode
# GEMINI_TELEMETRY=false               # Disable telemetry
